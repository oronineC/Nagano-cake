<%= form_for(@item, url: admin_items_path) do |f| %>
    <div class="field row">
      <%= f.attachment_field :image %>
  </div>

  <div class="field">
      <h4>商品名</h4>
      <%= f.text_field :name, class: "col-xs-12 item_name" %>
    </div>

  <div class="field">
    <h4>商品説明</h4>
    <%= f.text_area :explanation, class: "col-xs-12 item_explanation" %>
  </div>

    <div class="field">
      <h4>税抜価格</h4>
      <%= f.text_field :price %><span> 円</span>
    </div>

    <div class="field">
      <h4>販売ステータス</h4>
      <%= f.select :is_sales_active, Item.is_sales_actives.keys.map{|k| [I18n.t("enums.item.is_sales_active.#{k}"), k]} %>

    </div>


  <div class="actions row">
    <%= f.submit class: "btn btn-primary col-xs-12" %>
  </div>
  <% end %>

