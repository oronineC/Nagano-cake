<h2>商品一覧</h2>
<%= link_to "+", new_admin_item_path %>
<i class="glyphicon glyphicon-plus-sign"></i>
    <!--items一覧 -->
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item) %></td>
          <td><%= item.price%></td>
          <td><%= item.genre.name%></td>
          <td><%= item.is_sales_active_i18n %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
<%= paginate @items %>
