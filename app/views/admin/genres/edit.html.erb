<div class="title">
<h2>ジャンル編集画面</h2>
</div>
<div class="col-12">
	<%= form_with(model: @genre, url: admin_genre_path(@genre.id)) do |f| %>
		<%= "ジャンル" %>
		<%= f.text_field :name %>
		<%= f.radio_button :is_active_status, :有効 %>
		<%= f.label :is_active_status, "有効", {value: :有効} %>
		<%= f.radio_button :is_active_status, :無効 %>
		<%= f.label :is_active_status, "無効", {value: :無効} %>
		<%= f.submit "更新する", class:"btn btn-primary" %>
	<% end %>
</div>

