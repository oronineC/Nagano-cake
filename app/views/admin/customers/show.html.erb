<h4><%= @customer.lastNameKanji %>　<%= @customer.first_name_kanji %>さん登録情報編集</h4>
<table class='table table-type'>
      <tr>
        <th>顧客ID</th>
        <td><%= @customer.id %>  
            <span class="badge badge-primary">
            <% if @customer.is_customer_active == true %>
              有効会員
            <% else %>
              退会済会員
            <% end %>
            </span>
        </td>
      </tr>
      <tr>
    	  <th>氏名</th>
    	  <th><%= @customer.lastNameKanji %>　<%= @customer.first_name_kanji %></th>
      </tr>
      <tr>
    	  <th>フリガナ</th>
    	  <th><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></th>
      </tr>
      <tr>
    	  <th>郵便番号</th>
    	  <th><%= @customer.postcode %></th>
      </tr>
      <tr>
    	  <th>住所</th>
    	  <th><%= @customer.street_address %></th>
      </tr>
      <tr>
    	  <th>電話番号</th>
    	  <th><%= @customer.phone_number %></th>
      </tr>
      <tr>
    	  <th>メールアドレス</th>
    	  <th><%= @customer.email %></th>
      </tr>
</table>

  <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-primary" %>

<div class="col-6">
  <%= link_to "注文履歴一覧を見る", "#", class: "btn btn-primary" %>
</div>