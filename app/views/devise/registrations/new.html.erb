<div class="col-12">
  <h2>新規会員登録</h2>
</div>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <table class="table">
    <tr>
      <th><%= f.label :lastNameKanji, "（姓）" %></th>
      <td><%= f.text_field :lastNameKanji, autofocus: true, autocomplete: "（姓）", placeholder: "例）〇〇" %></td>
      <th><%= f.label :first_name_kanji, "（名）" %></th>
      <td><%= f.text_field :first_name_kanji, autofocus: true, autocomplete: "（名）", placeholder: "例）〇〇" %></td>
    </tr>
    <tr>
      <th><%= f.label :last_name_kana, "（セイ）" %></th>
      <td><%= f.text_field :last_name_kana, autocomplete: "（セイ）", placeholder: "例）〇〇" %></td>
      <th><%= f.label :first_name_kana, "（メイ）" %></th>
      <td><%= f.text_field :first_name_kana, autocomplete: "（メイ）", placeholder: "例）〇〇" %></td>
    </tr>
    <tr>
      <th><%= f.label :email, "メールアドレス" %></th>
      <td><%= f.email_field :email, autocomplete: "メールアドレス", placeholder: "例）〇〇〇〇@〇〇.〇〇", :size => "30" %></td>
    </tr>
    <tr>
      <th><%= f.label :postcode, "郵便番号（ハイフンなし）" %></th>
      <td><%= f.text_field :postcode, autocomplete: "郵便番号（ハイフンなし）", placeholder: "例）〇〇〇〇〇〇〇", :size => "30" %></td>
    </tr>
    <tr>
      <th><%= f.label :street_address, "住所" %></th>
      <td><%= f.text_field :street_address, autocomplete: "住所", placeholder: "例）〇〇県〇〇市〇〇０−０ー０", :size => "30" %></td>
    </tr>
    <tr>
      <th><%= f.label :phone_number, "電話番号（ハイフンなし）" %></th>
      <td><%= f.text_field :phone_number, autocomplete: "電話番号（ハイフンなし）", placeholder: "例）〇〇〇〇〇〇〇〇〇〇〇", :size => "30" %></td>
    </tr>
    <tr>
      <th><%= f.label :password, "パスワード" %></th>
      <td><%= f.password_field :password, autocomplete: "パスワード", placeholder: "例）〇〇〇〇〇〇〇〇〇〇", :size => "30" %></td>
    </tr>
    <tr>
      <th><%= f.label :password_confirmation, "パスワード（確認用）" %></th>
      <td><%= f.password_field :password_confirmation, autocomplete: "パスワード（確認用）", placeholder: "例）〇〇〇〇〇〇〇〇〇〇", :size => "30" %></td>
    </tr>
  </table>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>

<% end %>

<div class="col-md-5 go-login">
  <h3>既に登録済みの方</h3>
  <h5>
    <%= link_to "こちら", "/customers/sign_in" %>からログインしてください。
  </h5>
</div>

