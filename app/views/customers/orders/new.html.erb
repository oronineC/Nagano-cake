<div class="container">
    <h2>注文情報入力</h2>
    
    <%= form_with(model: @order, url:  new_customers_order_path(@order.id)) do |f| %>
		<h4>支払方法</h4>
		<%= f.radio_button :method_of_payment, 0, checked: "checked" %>
		クレジットカード
		<%= f.radio_button :method_of_payment, 1 %>
	   銀行振込
    
    <h4>届け先</h4>
    <label>
      <%#= f.radio_button : %>ご自身の住所
    </label>
    <p><%= current_customer.postcode %></p>
     <p><%= current_customer.street_address %></p>
     <p><%= current_customer.lastNameKanji %><%= current_customer.first_name_kanji %></p>
   
    <label>
      <%#= f.radio_button %>登録済み住所から選択
    </label>
    

    
    <%= f.collection_select :delivery_address, @customer.delivery_street_address, :id, :delivery_street_address %>
    
    
    
    <label>
        <%#=f.radio_button %>新しいお届け先
    </label>
    
    <p>郵便番号
      <%=f.text_field :postcode %></p>
    <p>住所
      <%=f.text_field :street_address %></p>
    <p>宛名
      <%=f.text_field :address %></p>
      <%= f.submit "確認画面へ進む" %>
  <% end %>
</div>
     