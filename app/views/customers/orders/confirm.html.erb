
    <h2>注文情報確認</h2>

  <%= form_with(model: @order, local: true, url:  customers_orders_path, method: :post) do |f| %>

  <table class="table","col-lg-12">
    <thead class= "thead-light">
      <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>

  <% sum_all = 0 %>
  <% @carts.each do |cart| %>
  <div class="row space-sm">
    <div class="col-lg-3">
      <%= link_to customers_item_path(cart.item_id) do %>
        <%= attachment_image_tag(cart.item, :image, :fill, 100, 100, fallback: "no_image.jpg") %>
      <% end %>
    </div>
    <div class="col-lg-2">
      <%= link_to customers_item_path(cart.item_id) do %>
        <%= cart.item.name %>
      <% end %>
    </div>
    <div class="col-lg-2">
      <%= price_include_tax(cart.item.price) %>
    </div>
    <div class="col-lg-2">
      <%= cart.quantity %>
    </div>
    <div class="col-lg-2">
      <%= sum_item = price_include_tax(cart.item.price).to_i * cart.quantity %>円
      <% sum_all += sum_item %>
    </div>
  </div>
  <% end %>

  <div class="row space">
    <div class="col-lg-12">
      <div class="row">
        <div class="col-lg-3">
          <strong>送料</strong>
        </div>
        <div class="col-lg-3">
          <%= @order.postage %>円
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3">
          <strong>商品合計</strong>
        </div>
        <div class="col-lg-3">
          <%= sum_all.to_i %>円
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3">
          <strong>ご請求額</strong>
        </div>
        <div class="col-lg-3">
          <% billling_amount = sum_all + @order.postage.to_i %>
          <%= billling_amount.to_i %>円
        </div>
      </div>
    </div>
  </div>

  <div class="row space-sm">
    <div class="col-lg-2">
      <h3>支払方法</h3>
    </div>
    <div class="col-lg-4">
      <%= @order.method_of_payment %>
    </div>
  </div>

  <div class="row space-sm">
    <div class="col-lg-2">
      <h3>お届け先</h3>
    </div>
    <div class="col-lg-4">
      <%= @order.delivery_post_code %>
      <%= @order.delivery_address %>
      <%= @order.delivery_street_address %>
    </div>
  </div>
  <%= f.hidden_field :method_of_payment ,:value => @order.method_of_payment %>
  <%= f.hidden_field :customer_id, :value => current_customer.id %>
  <%= f.hidden_field :delivery_post_code, :value => "#{@order.delivery_post_code}" %>
  <%= f.hidden_field :delivery_address, :value => "#{@order.delivery_address}" %>
  <%= f.hidden_field :delivery_street_address, :value => "#{@order.delivery_street_address}" %>
</div>

<div class="row space">
  <div class="col-lg-2 offset-lg-5">
    <%= f.submit "購入を確定する", class: "btn btn-danger btn-lg" %>
  </div>
</div>


<% end %>
</div>