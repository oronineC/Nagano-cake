<div class="col-md-12">
<h2><i class="fas fa-edit"></i>　配送先編集　<i class="fas fa-edit"></i></h2>
</div>


<%= form_for @delivery, url:customers_delivery_path(@delivery), method: :patch do |f| %>

<div class="delivery-table">
  <table class="table">
    <tr>
      <th><%= f.label "郵便番号（ハイフンなし）" %></th>
      <td><%= f.text_field :postcode, class: "postcode" %></td>
    </tr>
    <tr>
      <th><%= f.label "住所" %></th>
      <td><%= f.text_field :street_address, class: "street_address", :size => "40" %></td>
    </tr>
    <tr>
      <th><%= f.label "宛名" %></th>
      <td><%= f.text_field :address, class: "address" %></td>
    </tr>
</table>
</div>


<div class="actions">
  <%= f.submit "編集する", class: "btn btn-primary"%>
</div>

<% end %>
</div>