<div class="col-12">
  <h2>配送先登録／一覧</h2>
</div>

<%= form_for @delivery, url:customers_deliveries_path, method: :post do |f| %>
  <div class="field">
    <%= f.label "郵便番号（ハイフンなし）" %>
    <%= f.text_field :postcode, class: "postcode" %>
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :street_address, class: "street_address" %>
  </div>

  <div class="field">
    <%= f.label "宛名" %>
    <%= f.text_field :address, class: "address" %>
  </div>
  <%= f.submit "登録する", class: "btn btn-success"%>
<% end %>



<table class="table" >
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.postcode %></td>
        <td><%= delivery.street_address %></td>
        <td><%= delivery.address %></td>
        <td>
          <%= link_to "編集する", edit_customers_delivery_path(delivery.id), class: "btn btn-primary" %>
          <%= link_to '削除する', customers_delivery_path(delivery.id), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>