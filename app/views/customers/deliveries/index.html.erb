<div class="col-12">
  <h2><i class="fas fa-truck"></i>　配送先登録／一覧　<i class="fas fa-truck"></i></h2>
</div>

<%= form_for @delivery, url:customers_deliveries_path, method: :post do |f| %>
  <table class="table">
      <tr>
        <th><%= f.label "郵便番号（ハイフンなし）" %></th>
        <td><%= f.text_field :postcode, class: "postcode" %></td>
      </tr>
      <tr>
        <th><%= f.label "住所" %></th>
        <td><%= f.text_field :street_address, class: "street_address", :size => "40" %></td>
      </tr>
      <tr>
        <th><%= f.label "宛名" %></th>
        <td><%= f.text_field :address, class: "address" %></td>
      </tr>
  </table>

  <div class="delivery-button">
    <%= f.submit "登録する", class: "btn btn-success"%>
  </div>

<% end %>



<table class="table" >
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.postcode %></td>
        <td><%= delivery.street_address %></td>
        <td><%= delivery.address %></td>
        <td>
          <%= link_to "編集する", edit_customers_delivery_path(delivery.id), class: "btn btn-primary" %>
          <%= link_to '削除する', customers_delivery_path(delivery.id), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>