<h2>会員マイページ</h2>
<div class="col-12">
    <h3>登録情報</h3>
    <%= link_to "編集する", edit_customers_customer_path(@customer.id), class: "btn btn-primary" %>
    <%= link_to "パスワードを変更する", edit_customer_password_path, class: "btn btn-primary" %>
</div>

<table class='table table-dark'>
      <tr>
    	  <th>氏名</th>
    	  <th><%= @customer.lastNameKanji %>　<%= @customer.first_name_kanji %></th>
      </tr>
      <tr>
    	  <th>カナ</th>
    	  <th><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></th>
      </tr>
      <tr>
    	  <th>郵便番号</th>
    	  <th><%= @customer.postcode %></th>
      </tr>
      <tr>
    	  <th>住所</th>
    	  <th><%= @customer.street_address %></th>
      </tr>
      <tr>
    	  <th>電話番号</th>
    	  <th><%= @customer.phone_number %></th>
      </tr>
      <tr>
    	  <th>メールアドレス</th>
    	  <th><%= @customer.email %></th>
      </tr>
</table>

<h3>配送先</h3>
<div class="col-3">
  <%= link_to "一覧を見る", customers_deliveries_path, class: "btn btn-primary" %>
</div>

<h3>注文履歴</h3>
<div class="col-6">
  <%= link_to "一覧を見る", customers_orders_path, class: "btn btn-primary" %>
</div>
