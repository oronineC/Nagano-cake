<div class="col-12">
    <h2>登録情報編集</h2>
    <%= form_for(@customer,url:customers_customer_path) do |f| %>
    <table class="table">
        <tr>
            <td class="text-center">名前</td>
            <td>
                <%= f.text_field :lastNameKanji %>
                <%= f.text_field :first_name_kanji %>
            </td>
        </tr>
        <tr>
            <td class="text-center">カナ</td>
            <td >
                <%= f.text_field :last_name_kana %>
                <%= f.text_field :first_name_kana %>
            </td>
        </tr>
        <tr>
            <td class="text-center">郵便番号</td>
            <td>
                <%= f.text_field :postcode %>
            </td>
        </tr>
        <tr>
            <td class="text-center">住所</td>
            <td>
                <%= f.text_area :street_address %>
            </td>
        </tr>
        <tr>
            <td class="text-center">電話番号</td>
            <td>
                <%= f.text_field :phone_number %>
            </td>
        </tr>
        <tr>
            <td class="text-center">メールアドレス</td>
            <td>
                <%= f.email_field :email %>
            </td>
        </tr>
    </table>
    <div class="text-center">
        <%= f.submit "編集内容を保存する",class: "btn btn-primary" %>
    </div>
    <% end %>
</div>
    <div class="offset-11">
        <%= link_to "退会する", customers_customer_confirm_path(@customer.id), class: "btn btn-danger" %>
    </div>