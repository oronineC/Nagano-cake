<div class="row">
    <!-- 商品一覧を表示 -->
    <h2><%= @info %>一覧(全件)</h2>

    <div class="main clearfix">
  		<% @items.each do |item| %>
  		    <div class = "AA">
        		<div class = "imagWrap-f">
          			<%= link_to customers_item_path(item) do %>
            			<%= attachment_image_tag item, :image, :fill, 60, 60, fallback: "", size:'150x100' %>
          			<% end %>
        		</div>
      			<p><%= link_to item.name, customers_item_path(item) %></p>
      			<p></p>
      		</div>
  		<% end %>
	</div>

</div>