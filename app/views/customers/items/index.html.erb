<div class="row">
<!-- ジャンル検索サイドバー  -->
<div class="genre_search">
  <h4>ジャンル検索</h4>
  <p><%=link_to 'ケーキ', '#' %></p>
  <p><%=link_to 'プリン', '#' %></p>
  <p><%=link_to 'キャンディ', '#' %></p>
  <p><%=link_to '焼き菓子', '#' %></p>
 </div>
